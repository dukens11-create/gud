# Environment Configuration Example
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values for your environment

# ============================================================================
# Application Environment
# ============================================================================
# The deployment environment: development, staging, or production
APP_ENV=development

# The application name (can include environment suffix for clarity)
APP_NAME=GUD Express

# Application version (should match pubspec.yaml)
APP_VERSION=1.0.0

# ============================================================================
# API Configuration
# ============================================================================
# Base URL for the backend API
# Development: http://localhost:3000
# Staging: https://staging-api.gudexpress.com
# Production: https://api.gudexpress.com
API_URL=http://localhost:3000

# API request timeout in seconds
API_TIMEOUT_SECONDS=30

# ============================================================================
# Firebase Configuration
# ============================================================================
# Firebase project ID for this environment
# Get this from Firebase Console > Project Settings
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Web API Key
# Get this from Firebase Console > Project Settings > Web Apps
FIREBASE_WEB_API_KEY=your-firebase-web-api-key

# Firebase Storage Bucket
# Format: project-id.appspot.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ============================================================================
# Logging and Debugging
# ============================================================================
# Enable general logging (true for dev/staging, false for production)
ENABLE_LOGGING=true

# Enable verbose debug logging (true for development only)
ENABLE_DEBUG_LOGGING=true

# Show performance overlay (true for development only)
ENABLE_PERFORMANCE_OVERLAY=false

# ============================================================================
# Error Reporting and Analytics
# ============================================================================
# Enable Firebase Crashlytics (false for dev, true for staging/production)
ENABLE_CRASHLYTICS=false

# Enable Firebase Analytics (false for dev, true for staging/production)
ENABLE_ANALYTICS=false

# Enable Firebase Performance Monitoring (false for dev, true for production)
ENABLE_PERFORMANCE_MONITORING=false

# ============================================================================
# External Services
# ============================================================================
# Google Maps API Key
# Get from: https://console.cloud.google.com/google/maps-apis
# Different keys for each environment
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Stripe Publishable Key
# Get from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_) for dev/staging, live keys (pk_live_) for production
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# ============================================================================
# Feature Flags
# ============================================================================
# Enable biometric authentication (fingerprint/face ID)
ENABLE_BIOMETRIC=true

# Enable GPS tracking for deliveries
ENABLE_GPS_TRACKING=true

# Enable geofencing for automatic status updates
ENABLE_GEOFENCING=true

# Enable invoicing functionality
ENABLE_INVOICING=true

# Enable expense tracking
ENABLE_EXPENSE_TRACKING=true

# Enable statistics and analytics dashboard
ENABLE_STATISTICS=true

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=true

# Enable offline mode with data sync (experimental)
ENABLE_OFFLINE_MODE=false

# Enable test mode (bypass certain validations, dev only)
ENABLE_TEST_MODE=false

# ============================================================================
# Database and Storage Limits
# ============================================================================
# Maximum file upload size in bytes (default: 10MB)
MAX_FILE_UPLOAD_SIZE=10485760

# Maximum image size in bytes (default: 5MB)
MAX_IMAGE_SIZE=5242880

# Default pagination page size
DEFAULT_PAGE_SIZE=20

# ============================================================================
# Development and Debug Settings
# ============================================================================
# Enable debug tools and overlays (true for development only)
ENABLE_DEBUG_TOOLS=true

# Show environment banner in app (true for dev/staging, false for production)
SHOW_ENVIRONMENT_BANNER=true

# Bypass authentication for testing (NEVER true in production)
BYPASS_AUTH_FOR_TESTING=false

# ============================================================================
# Notes:
# ============================================================================
# 1. Never commit .env files with real credentials to version control
# 2. Add .env.* to .gitignore (except .env.example)
# 3. Use different API keys and project IDs for each environment
# 4. Store production secrets securely (e.g., CI/CD secret management)
# 5. Rotate API keys regularly
# 6. For Flutter, consider using flutter_dotenv package to load these values
# 7. For native builds, these can be injected at build time
