# Development Environment Configuration
# This file contains environment-specific variables for development

# Application Environment
APP_ENV=development
APP_NAME=GUD Express (Dev)
APP_VERSION=1.0.0

# API Configuration
API_URL=http://localhost:3000
API_TIMEOUT_SECONDS=30

# Firebase Configuration
FIREBASE_PROJECT_ID=gud-dev
FIREBASE_WEB_API_KEY=your-dev-web-api-key
FIREBASE_STORAGE_BUCKET=gud-dev.appspot.com

# Logging and Debugging
ENABLE_LOGGING=true
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_OVERLAY=false

# Crashlytics and Analytics
ENABLE_CRASHLYTICS=false
ENABLE_ANALYTICS=false
ENABLE_PERFORMANCE_MONITORING=false

# External Services (Development Keys)
GOOGLE_MAPS_API_KEY=dev-google-maps-api-key
STRIPE_PUBLISHABLE_KEY=pk_test_dev_key

# Feature Flags
ENABLE_BIOMETRIC=true
ENABLE_GPS_TRACKING=true
ENABLE_GEOFENCING=true
ENABLE_INVOICING=true
ENABLE_EXPENSE_TRACKING=true
ENABLE_STATISTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=false
ENABLE_TEST_MODE=true

# Database and Storage
MAX_FILE_UPLOAD_SIZE=10485760
MAX_IMAGE_SIZE=5242880
DEFAULT_PAGE_SIZE=20

# Development-Specific
ENABLE_DEBUG_TOOLS=true
SHOW_ENVIRONMENT_BANNER=true
BYPASS_AUTH_FOR_TESTING=false
