# Production Environment Configuration
# This file contains environment-specific variables for production

# Application Environment
APP_ENV=production
APP_NAME=GUD Express
APP_VERSION=1.0.0

# API Configuration
API_URL=https://api.gudexpress.com
API_TIMEOUT_SECONDS=30

# Firebase Configuration
FIREBASE_PROJECT_ID=gud-prod
FIREBASE_WEB_API_KEY=your-prod-web-api-key
FIREBASE_STORAGE_BUCKET=gud-prod.appspot.com

# Logging and Debugging
ENABLE_LOGGING=false
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_OVERLAY=false

# Crashlytics and Analytics
ENABLE_CRASHLYTICS=true
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true

# External Services (Production Keys)
GOOGLE_MAPS_API_KEY=prod-google-maps-api-key
STRIPE_PUBLISHABLE_KEY=pk_live_prod_key

# Feature Flags
ENABLE_BIOMETRIC=true
ENABLE_GPS_TRACKING=true
ENABLE_GEOFENCING=true
ENABLE_INVOICING=true
ENABLE_EXPENSE_TRACKING=true
ENABLE_STATISTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=false
ENABLE_TEST_MODE=false

# Database and Storage
MAX_FILE_UPLOAD_SIZE=10485760
MAX_IMAGE_SIZE=5242880
DEFAULT_PAGE_SIZE=20

# Production-Specific
ENABLE_DEBUG_TOOLS=false
SHOW_ENVIRONMENT_BANNER=false
BYPASS_AUTH_FOR_TESTING=false
